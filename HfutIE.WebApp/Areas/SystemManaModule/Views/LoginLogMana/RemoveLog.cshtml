@{
    ViewBag.Title = "系统日志》清空数据页面";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<script type="text/javascript">
    //保存事件
    function AcceptClick() {
        if (!CheckDataValid('#form1')) {
            return false;
        }
        var postData = {
            KeepTime: $("#KeepTime").val()
        }
        AjaxJson("/SystemManaModule/LoginLogMana/SubmitRemoveLog", postData, function (data) {
            tipDialog(data.Message, 3, data.Code);
            top.frames[tabiframeId()].windowload();
            closeDialog();
        });
    }
</script>
<form id="form1" style="margin: 25px; margin-left: 40px; margin-right: 40px;">
    <div style="padding-bottom: 5px;">
        日志保留时间：<select id="KeepTime"  class="keyword">
            <option value="6">保留近半年</option>
            <option value="12">保留近一年</option>
            <option value="36">保留近三年</option>
            <option value="60">保留近五年</option>
            <option value="0">不保留，全部删除</option>
        </select>
    </div>
</form>
