@{
    ViewBag.Title = "系统日志";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        //GetTree();
        setType();
        GetGrid("");
        BindCombobox();
    });

    function BindCombobox() {
        BindDropItem("#LogType", "FASLogType", "==请选择=");
    }
   
    //加载表格
    function GetGrid(ParameterJson) {
        $("#gridTable").jqGrid({
            url: "@Url.Content("~/SystemManaModule/LoginLogMana/GridPageListJson")",//联合查询
            datatype: "json",
            height: $(window).height() - 152,
            autowidth: true,
            colModel: [
                { label: "主键", name: "syslogid", index: "syslogid", hidden: true },
                {
                    label: '操作时间', name: "cretm", width: 200, sortable: true, align: 'center',
                    formatter: function (cellvalue, options, rowobject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd hh:mm');
                    }
                },
                //{ label: "操作模块", name: "modulename", index: "modulename", width: 120 },
                { label: "操作类型", name: "logtype", index: "logtype", width: 120, hidden: true },
                {
                    label: "操作类型", name: "logtypename", width: 65, align: "center",
                    formatter: function (value, options, rowObject) {
                        if (rowObject.logtype == '0') { return "登陆"; }
                        if (rowObject.logtype == '1') { return "新增"; }
                        if (rowObject.logtype == '2') { return "修改"; }
                        if (rowObject.logtype == '3') { return "删除"; }
                        if (rowObject.logtype == '4') { return "其他"; }
                        if (rowObject.logtype == '5') { return "访问"; }
                        if (rowObject.logtype == '6') { return "离开"; }
                        if (rowObject.logtype == '7') { return "查询"; }
                        if (rowObject.logtype == '8') { return "安全退出"; }
                    }
                },
                { label: "ip地址", name: "ipaddress", index: "ipaddress", width: 120 },
                { label: "操作用户", name: "crenm", index: "crenm", width: 120 },
                { label: "操作人编号", name: "crecd", index: "crecd", width: 120, hidden: true },
                {
                    label: "操作状态", name: "status", index: "status", width: 120, align: "center",
                    formatter: function (value, options, rowobject) {
                        if (value == '1') {
                            return "<span style='color:green'>成功</span>";
                        } else if (value == '0'){
                            return "<span style='color:red'>失败</span>";
                        } else {
                            return "<span style='color:blue'>异常</span>";
                        }
                    }
                },
                { label: "操作描述", name: "remark", index: "remark", width: 1000 },
            ],
            viewrecords: true,
            rowNum: 200,
            rowList: [200, 500, 1000,10000],
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true
        });
        columnModelData("#gridTable");
    }

    function setType() {
        var searchtype = $("#Condition").val();
        if (searchtype == "1") {//查询所有
            $("#StartTime").hide();
            $("#STime_s").hide();
            $("#EndTime").hide();
            $("#ETime_s").hide();
            $("#LogType").hide();
            $("#LogType_s").hide();
            $("#StartTime").val("");
            $("#EndTime").val("");
            $("#LogType").val("");
        }
        else if (searchtype == "Time") {
            $("#StartTime").show();
            $("#STime_s").show();
            $("#EndTime").show();
            $("#ETime_s").show();
            $("#LogType").hide();
            $("#LogType_s").hide();          
            $("#LogType").val("");
        }
        else if (searchtype == "LogType") {
            $("#StartTime").hide();
            $("#STime_s").hide();
            $("#EndTime").hide();
            $("#ETime_s").hide();
            $("#LogType").show();
            $("#LogType_s").show();
            $("#StartTime").val("");
            $("#EndTime").val("");
        }
    }

    //搜索
    function btn_Search() {
        var condition = $("#Condition").val();
        var keywords = "";        
        if (condition =="Time") {
            var StartTime = $("#StartTime").val();
            var EndTime = $("#EndTime").val();       
            $("#gridTable").jqGrid('setGridParam', {
                url: "@Url.Content("~/SystemManaModule/LoginLogMana/GetLogList")?StartTime=" + StartTime + '&EndTime=' + EndTime, page: 1, datatype: 'json'
            }).trigger('reloadGrid');
        }
        else {
            if ($("#LogType").val() != "" && $("#LogType").val() != null) {
                keywords = $("#LogType").val();
            }            
            else {
                keywords = "";
            }
            $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/SystemManaModule/LoginLogMana/GridLogInfor")?condition=" + escape(condition) + "&keywords=" + escape(keywords) , page: 1, datatype: 'json'
        }).trigger('reloadGrid');
        }
    } 
    $(document).keypress(function (e) {
        // 回车键事件
        if (e.which == 13) {
            btn_Search();
        }
    });
    //明细
    function btn_detail() {
        var SysLogId = GetJqGridRowValue("#gridTable", "syslogid");
        var LogType = GetJqGridRowValue("#gridTable", "logtype");
        var LogTypeName = GetJqGridRowValue("#gridTable", "logtypename");
        if (IsChecked(SysLogId)) {
            var url = "/SystemManaModule/LoginLogMana/LoginDetail?SysLogId=" + SysLogId + '&LogType=' + LogType;
            Dialog(url, "Detail", '日志详细信息-【' + LogTypeName + '】', 850, 450);
        }
    }
    //清空数据
    function btn_broom() {
        var url = "/SystemManaModule/LoginLogMana/RemoveLog";
        openDialog(url, "RemoveLog", "清空系统日志", 300, 80, function (iframe) {
            top.frames[iframe].AcceptClick();
        });
    }
    //导出Excel
    function btn_derive() {
        SetDeriveExcel("#gridTable", "系统日志-" + formatDate(CurrentTime(), 'yyyyMMdd'));
        openDialog("/CommonModule/ExcelImport/DeriveDialog", "DeriveDialog", "系统日志导出", 600, 300, function (iframe) {
            top.frames[iframe].AcceptClick();
        });
    }
    //刷新表格
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入
    }
</script>
<div class="tools_bar leftline rightline" style="margin: 1px; margin-bottom: 0px;">
    <div class="PartialButton">
        @Html.Partial("_PartialButton")
    </div>
</div>
<div class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;">
    <table border="0" class="form-find" style="height: 45px;">
        <tr>
            <th>搜索条件：</th>
            <td>
                <select id="Condition" onchange="setType()" class="txt" style="height: 28px;width: 150px">
                    <option value="1">全部</option>
                    <option value="Time">日志时间</option>
                    <option value="LogType">日志类型</option>
                </select>
            </td>
            <th id="STime_s" style="display:none">开始时间：</th>
            <td>
                <input id="StartTime" type="text" class="txt Wdate" value="@HfutIE.Utilities.DateTimeHelper.GetToday()" style="width: 120px" onfocus="var endDate=$dp.$('EndTime');WdatePicker({onpicked:function(){EndTime.focus();},maxDate:'#F{$dp.$D(\'EndTime\')}'})" />
            </td>
            <th id="ETime_s" style="display:none">结束时间：</th>
            <td>
                <input id="EndTime" type="text" class="txt Wdate" value="@HfutIE.Utilities.DateTimeHelper.GetToday()" style="width: 120px" onfocus="WdatePicker({minDate:'#F{$dp.$D(\'StartTime\')}'})" />
            </td>
            <th id="LogType_s" style="display:none">日志类型：</th>
            <td>
                <select id="LogType" name="FASLogType" type="text" class="txt" style="height:auto" />
            </td>
            <td>
                <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
            </td>
        </tr>
        </table>
</div>
<div class="topline rightline" style="margin: 1px; margin-top: -1px;">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
