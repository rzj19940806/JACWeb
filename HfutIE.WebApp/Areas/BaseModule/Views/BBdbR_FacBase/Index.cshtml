@{
    ViewBag.Title = "工厂基础信息表";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        CellItem_FacTyp('FactoryType');//需在GetGrid()之前进行初始化赋值
        GetGrid();
        GetTree();
        Show();
        BindDropItem("#FacTyp", "FactoryType", "==全部==");
    })
    var areaId, area_name = "";
    var selectnodeishaschild = "";//选中树节点是否有子节点
    var parentId = "";//父节点编号
    var FacTypCellItem = "";

    //加载左边树
    function GetTree() {
        var itemtree = {
            onnodeclick: function (item) {
                selectnodeishaschild = item.hasChildren;
                areaId = item.id;            //ID
                area_name = item.text;         //名称
                parentId = item.parentnodes;   //父节点编号
                //2.点击树展示表格
                $("#gridTable").jqGrid('setGridParam', { url: "@Url.Content("~/BaseModule/BBdbR_FacBase/GridListJson")?areaId=" + areaId + "&&parentId=" + parentId, datatype: 'json'}).trigger('reloadGrid');
            },
            url: "@Url.Content("~/BaseModule/BBdbR_FacBase/TreeJson")"    //1.获取树
        };
        $("#ItemsTree").treeview(itemtree);
    }

    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
            url: "@Url.Content("~/BaseModule/BBdbR_FacBase/GridListJson?areaId=''&&parentId=''")",   
        datatype: "json",
        height: $(window).height() - 150,
        autowidth: true,
        colModel: [
            { label: '工厂主键', name: 'FacId', index: 'FacId', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '工厂编号', name: 'FacCd', index: 'FacCd', width: 0, align: 'left', sortable: true },
            { label: '工厂名称', name: 'FacNm', index: 'FacNm', width: 0, align: 'left', sortable: true },
            { label: '公司主键', name: 'CompanyId', index: 'CompanyId', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '公司编号', name: 'CompanyCd', index: 'CompanyCd', width: 0, align: 'left', sortable: true },
            { label: '公司名称', name: 'CompanyNm', index: 'CompanyNm', width: 0, align: 'left', sortable: true },
            {
                label: '工厂类型', name: 'FacTyp', index: 'FacTyp', width: 250, align: 'center', sortable: true,
                formatter: "select", formatoptions: { value: FacTypCellItem }
            },
            { label: '工厂地址', name: 'Addr', index: 'Addr', width: 0, align: 'left', sortable: true },
            { label: '工厂描述', name: 'Dsc', index: 'Dsc', width: 0, align: 'left', sortable: true },
            { label: '联系电话', name: 'FacTelephone', index: 'FacTelephone', width: 0, align: 'left', sortable: true },
            { label: '负责人员主键', name: 'StfId', index: 'StfId', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '负责人员编号', name: 'StfCd', index: 'StfCd', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '负责人员姓名', name: 'StfNm', index: 'StfNm', width: 0, align: 'left', sortable: true },
            { label: '负责手机号', name: 'Phn', index: 'Phn', width: 0, align: 'left', sortable: true },
            { label: '传真', name: 'FacFax', index: 'FacFax', width: 0, align: 'left', sortable: true },
            { label: '邮箱', name: 'FacEmail', index: 'FacEmail', width: 0, align: 'left', sortable: true },
            { label: '版本号', name: 'VersionNumber', index: 'VersionNumber', width: 0, align: 'left', sortable: true, hidden: true  },
            {
                label: '有效性', name: 'Enabled', index: 'Enabled', width: 100, align: 'center', hidden: true ,
                formatter: function (cellvalue, options, rowObject) {
                    if (cellvalue == '0') return "<img src='../../Content/Images/checknomark.gif'/>";
                    else if (cellvalue == '1') return "<img src='../../Content/Images/checkokmark.gif'/>";
                }
            },
            { label: '创建时间', name: 'CreTm', index: 'CreTm', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '创建人编号', name: 'CreCd', index: 'CreCd', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '创建人名称', name: 'CreNm', index: 'CreNm', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '修改时间', name: 'MdfTm', index: 'MdfTm', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '修改人编号', name: 'MdfCd', index: 'MdfCd', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '修改人名称', name: 'MdfNm', index: 'MdfNm', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '备注', name: 'Rem', index: 'Rem', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '预留字段1', name: 'RsvFld1', index: 'RsvFld1', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '预留字段2', name: 'RsvFld2', index: 'RsvFld2', width: 0, align: 'left', sortable: true, hidden: true  },
            ],
        viewrecords: true,//显示总的记录条数
        rowNum: 50,
        rowList: [50, 100, 500, 1000],
            pager: "#gridPager",
            sortname: '',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            loadonce: true,
    });
    }

    //加载搜索框
    function Show() {
        var Condition = $("#Condition").val();
        if (Condition == "all") {
            $("#FacTyp").hide();
            $("#keywords").hide();
        }
        else if (Condition == "FacTyp") {
            $("#FacTyp").show();
            $("#keywords").hide();
        }
        else {
            $("#FacTyp").hide();
            $("#keywords").show();
        }
    }

    //刷新
    function windowload() {
        $("#gridTable").setGridParam({ datatype: 'json', page: 1 }).trigger("reloadGrid");
    }

    //新增按钮
    function btn_add() {
        if (!!areaId) {
            var url = "/BaseModule/BBdbR_FacBase/Form?areaId=" + areaId
            openDialog(url, "Form", "新增工厂信息", 500, 300, function (iframe) {
                top.frames[iframe].AcceptClick()
            });
        }
        else {
            alertDialog("请选择公司节点！", 0);
        }
    }

    //编辑按钮
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "FacId");
        if (KeyValue == undefined || KeyValue == "" || KeyValue == 'null' || KeyValue == 'undefined') {
            tipDialog('您没有选中任何项,请您选中后再操作。', 4, 'warning');
        }
        else {
            var count = KeyValue.split(",").length;
            if (count >= 2) {
                tipDialog('很抱歉，一次只能选择一个进行操作。', 4, 'warning');
            }
            else {
                var url = "/BaseModule/BBdbR_FacBase/Form?KeyValue=" + escape(KeyValue) + "&areaId=" + escape(areaId);
                openDialog(url, "Form", "编辑工厂信息", 500, 300, function (iframe) {
                    top.frames[iframe].AcceptClick()
                });
            }
        }
    }

    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "FacId");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/BaseModule/BBdbR_FacBase/Delete', delparm, KeyValue.split(",").length);
        }
    }

    //搜索
    function btn_Search() {
        var Condition = $("#Condition").val();
        var keywords;
        if (Condition == "FacTyp") {
            keywords = $("#FacTyp").val();
        }
        else {
            keywords = $("#keywords").val();
        }
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/BaseModule/BBdbR_FacBase/GridPageByCondition")?keywords=" + escape(keywords) + "&Condition=" + escape(Condition), page: 1, datatype: 'json'
    }).trigger('reloadGrid');
    }
    $(document).keypress(function (e) {
        // 回车键事件
        if (e.which == 13) {
            btn_Search();
        }
    });

    //根据数据字典显示内容
    function CellItem(Code, cellvalue) {
        var value = "";
        getAjax('/CommonModule/DataDictionary/BinDingItemsJson', { Code: Code }, function (data) {
            var itemjson = eval("(" + data + ")");
            $.each(itemjson, function (i) {
                if (itemjson[i].Code == cellvalue) {
                    value = itemjson[i].FullName;
                }
            });
        })
        return value;
    }

    //根据数据字典显示内容
    function CellItem_FacTyp(Code) {
        var value = "";
        getAjax('/CommonModule/DataDictionary/BinDingItemsJson', { Code: Code }, function (data) {
            var itemjson = eval("(" + data + ")");
            var length = itemjson.length;
            if (length == 1) {
                FacTypCellItem = itemjson[0].Code + ":" + itemjson[0].FullName;
            }
            else if (length > 1) {
                for (var a = 0; a < length - 1; a++) {
                    value += itemjson[a].Code + ":" + itemjson[a].FullName + ";";
                }
                FacTypCellItem = value + itemjson[length - 1].Code + ":" + itemjson[length - 1].FullName;
            }
            //length=0不处理
        })
    }


</script>
<div id="layout" class="layout">
    @*树区域*@
    <div class="layoutPanel layout-west">
        <div class="btnbartitle">
            <div>
                公司索引
            </div>
        </div>
        <div class="ScrollBar" id="ItemsTree"></div>
    </div>
    <div class="layoutPanel layout-center">
        @*按钮区域*@
        <div class="tools_bar" style="margin-top: 1px; margin-bottom: 0px;">
            <div class="PartialButton">
                @Html.Partial("_PartialButton")
            </div>
        </div>
        @*搜索框区域*@
        <table border="0" class="form-find" style="height: 45px;">
            <tr>
                <th>关键字：</th>
                <td>
                    <select id="Condition" style="width: 150px;height:25px" onclick=" Show()">
                        <option value="all">==全部==</option>
                        <option value="FacCd">工厂编号</option>
                        <option value="FacNm">工厂名称</option>
                        <option value="FacTyp">工厂类型</option>
                    </select>
                </td>
                <td>
                    <input id="keywords" type="text" class="txt" style="width: 200px" />
                </td>
                <td>
                    <select id="FacTyp" style="width: 150px;height:25px"></select>
                </td>
                <td>
                    <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
                </td>
            </tr>
        </table>
        @*</div>*@
        @*表格区域*@
        <div class="topline rightline" style="margin: 1px; margin-top: -1px;">
            <table id="gridTable"></table>
            <div id="gridPager"></div>
        </div>
    </div>
</div>