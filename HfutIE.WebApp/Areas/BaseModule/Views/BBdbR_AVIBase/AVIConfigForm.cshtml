@{
    ViewBag.Title = "AVI站点产线配置";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        GetGrid_up();
        GetGrid_down();
        BindDropItem("#PlineTyp", "PlineTyp", "==全部==");
    })

    var KeyValue = GetQuery('AviId');

    function GetGrid_up() {
        $("#gridTable_up").jqGrid({
            url: "/BaseModule/BBdbR_AVIBase/GridListJson_Up?KeyValue=" + KeyValue,
            datatype: "json",
            autowidth: false,
            width: 650,
            height: 160,
            colModel: [
                { label: '产线主键', name: 'PlineId', index: 'PlineId', width: 0, align: 'center', sortable: true, hidden: true },
                { label: '产线编号', name: 'PlineCd', index: 'PlineCd', width: 0, align: 'center', sortable: true },
                { label: '产线名称', name: 'PlineNm', index: 'PlineNm', width: 0, align: 'center', sortable: true },
                {
                    label: '产线类型', name: 'PlineTyp', index: 'PlineTyp', width: 0, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return CellItem('PlineTyp', cellvalue);
                    }
                },                
                { label: '产线描述', name: 'Dsc', index: 'Dsc', width: 0, align: 'center', sortable: true, hidden: true },            
            ],
            viewrecords: true,//显示总的记录条数
            rowNum: 10,
            rowList: [30, 50, 100, 500, 1000],
            pager: "#gridPager_up",
            sortname: '',
            sortorder: 'desc',
            sortname: '',
            rownumbers: true,
            shrinkToFit: true,
            loadonce: true,
            gridview: true,
            cellEdit: true,
            cellsubmit: 'clientArray',
            ondblClickRow: function (RowId) {
                var id = GetJqGridRowValue("#gridTable_up", "PlineId");
                var code = GetJqGridRowValue("#gridTable_up", "PlineCd");
                var fullname = GetJqGridRowValue("#gridTable_up", "PlineNm");
                var type = GetJqGridRowValue("#gridTable_up", "PlineTyp");
                var Dsc = GetJqGridRowValue("#gridTable_up", "Dsc");
                var equipment = KeyValue;//获取grid1选中行的数据
                if (KeyValue != "") {
                    $("#gridTable_down").jqGrid("addRowData", RowId, equipment, "last");//将grid选中行数据复制给grid1中新增的行
                    $("#gridTable_down").jqGrid("setRowData", RowId, {
                        PlineId: id, PlineCd: code, PlineNm: fullname, PlineTyp: type,
                        Dsc: Dsc
                    });//将grid选中行数据复制给grid1中新增的行
                        $("#gridTable_up").jqGrid("delRowData", RowId);//删除grid选中行的数据                   
                }
                else {
                    alertDialog("请先选择检查产线，再进行AVI配置！")
                }          
            }
        });
    }

    //检查项目已配置表格
    function GetGrid_down() {
        $("#gridTable_down").jqGrid({
            url: "/BaseModule/BBdbR_AVIBase/GridListJson_Down?KeyValue=" + KeyValue,
            datatype: "json",
            height: 170,
            width: 650,
            autowidth: false,
            colModel: [
                { label: '产线主键', name: 'PlineId', index: 'PlineId', width: 0, align: 'center', sortable: true, hidden: true },
                { label: '产线编号', name: 'PlineCd', index: 'PlineCd', width: 0, align: 'center', sortable: true },
                { label: '产线名称', name: 'PlineNm', index: 'PlineNm', width: 0, align: 'center', sortable: true },
                {
                    label: '产线类型', name: 'PlineTyp', index: 'PlineTyp', width: 0, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return CellItem('PlineTyp', cellvalue);
                    }
                },
                { label: '产线描述', name: 'Dsc', index: 'Dsc', width: 0, align: 'center', sortable: true, hidden: true },
              
            ],
            viewrecords: true,//显示总的记录条数
            rowNum: 10,
            rowList: [30, 50, 100, 500, 1000],
            pager: "#gridPager_down",
            sortname: '',
            sortorder: 'desc',
            sortname: '',
            rownumbers: true,
            shrinkToFit: true,
            loadonce: true,
            gridview: true,
            cellEdit: true,
            cellsubmit: 'clientArray',

            ondblClickRow: function (RowId) {            
                var id = GetJqGridRowValue("#gridTable_down", "PlineId");
                var code = GetJqGridRowValue("#gridTable_down", "PlineCd");
                var fullname = GetJqGridRowValue("#gridTable_down", "PlineNm");
                var type = GetJqGridRowValue("#gridTable_down", "PlineTyp");
                var Dsc = GetJqGridRowValue("#gridTable_down", "Dsc");
                var equipment = KeyValue;//获取grid1选中行的数据
                if (KeyValue != "") {
                    $("#gridTable_up").jqGrid("addRowData", RowId, equipment, "last");//将grid选中行数据复制给grid1中新增的行
                    $("#gridTable_up").jqGrid("setRowData", RowId, {
                        PlineId: id, PlineCd: code, PlineNm: fullname, PlineTyp: type,
                        Dsc: Dsc
                    });//将grid选中行数据复制给grid1中新增的行
                    $("#gridTable_down").jqGrid("delRowData", RowId);//删除grid选中行的数据
                }
                else {
                    alertDialog("请先选择检查产线，再进行AVI配置！")
                }
            },
            beforeEditCell: function (rowid, cellname, value, iRow, iCol) {
                lastrow = iRow;//行号
                lastcell = iCol;//列号
            }
        });
        jQuery("#gridTable_down").jqGrid('navGrid', '#pgwidth', { edit: false, add: false, del: false });
    }

    
    //刷新
    function windowload() {
        $("#gridTable_up").trigger("reloadGrid"); //重新载入
        $("#gridTable_down").trigger("reloadGrid"); //重新载入
    }

    //确认配置检查项目
    function btn_accept() {     
        var ids = $("#gridTable_down").jqGrid("getRowData"); //获取gridSelectTable表中多行数据
        AjaxJson('/BaseModule/BBdbR_AVIBase/SubmitAviConfig?', { listdto: ids, AviId: KeyValue }, function (data) {
            var t = data;
            if (t.Code == "1")//提交成功
            {
                alertDialog("提交成功！")
                $("#gridTable_down").trigger('reloadGrid');
                top.frames[tabiframeId()].windowload();
                closeDialog();
            }
            else {
                alertDialog("提交失败！", '-1');
                closeDialog();
            }
        });
    }
    
    //搜索条件
    function GetCondition() {
        var Condition = $("#Condition").val();
        if (Condition == "") {
            $("#tdsearch").hide();
        }
        else {
            $("#tdsearch").show();
        }
    }
    //根据数据字典显示内容
    function CellItem(Code, cellvalue) {
        var value = "";
        getAjax('/CommonModule/DataDictionary/BinDingItemsJson', { Code: Code }, function (data) {
            var itemjson = eval("(" + data + ")");
            $.each(itemjson, function (i) {
                if (itemjson[i].Code == cellvalue) {
                    value = itemjson[i].FullName;
                }
            });
        })
        return value;
    }
</script>

