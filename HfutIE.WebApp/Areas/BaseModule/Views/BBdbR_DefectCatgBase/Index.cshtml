@{
    ViewBag.Title = "缺陷类别表";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        Show();
        BindDropItem("#DefectCatgLevel", "DefectCatgLevel");
        GetGrid();
    })
    var condition = {
        ParamName: "",
        Operation: "",
        ParamValue: ""
    };

    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
            url: "@Url.Content("~/QualityModule/BBdbR_DefectCatgBase/GridPageJsonFAS")",
            datatype: "json",
            height: $(window).height() - 149,
            autowidth: true,
            colModel: [
                { label: '缺陷类型主键', name: 'DefectCatgId', index: 'DefectCatgId', width: 0, align: 'left', sortable: false, hidden: true },
                { label: '缺陷类型编号', name: 'DefectCatgCd', index: 'DefectCatgCd', width: 0, align: 'left', sortable: true },
                { label: '缺陷类型名称', name: 'DefectCatgNm', index: 'DefectCatgNm', width: 0, align: 'left', sortable: true },
                {
                    label: '缺陷级别', name: 'DefectCatgLevel', index: 'DefectCatgLevel', width: 0, align: 'left', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return CellItem("DefectCatgLevel",cellvalue);
                    }
                },
                { label: '描述', name: 'Dsc', index: 'Dsc', width: 0, align: 'left', sortable: true },
                { label: '有效性', name: 'Enabled', index: 'Enabled', width: 0, align: 'left', sortable: false, hidden: true },
                { label: '版本号', name: 'VersionNumber', index: 'VersionNumber', width: 0, align: 'left', sortable: false, hidden: true },
                { label: '创建时间', name: 'CreTm', index: 'CreTm', width: 0, align: 'left', sortable: false, hidden: true },
                { label: '创建人编号', name: 'CreCd', index: 'CreCd', width: 0, align: 'left', sortable: false, hidden: true },
                { label: '创建人名称', name: 'CreNm', index: 'CreNm', width: 0, align: 'left', sortable: false, hidden: true },
                { label: '修改时间', name: 'MdfTm', index: 'MdfTm', width: 0, align: 'left', sortable: false, hidden: true },
                { label: '修改人编号', name: 'MdfCd', index: 'MdfCd', width: 0, align: 'left', sortable: false, hidden: true },
                { label: '修改人名称', name: 'MdfNm', index: 'MdfNm', width: 0, align: 'left', sortable: false, hidden: true },
                { label: '备注', name: 'Rem', index: 'Rem', width: 0, align: 'left', sortable: true },
            ],
            pager: "#gridPager",
            sortname: 'DefectCatgCd',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
        });
    }
    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入
    }
    //新增
    function btn_add() {
        var url = "/QualityModule/BBdbR_DefectCatgBase/Form"
        openDialog(url, "Form", "新增缺陷类别表", 770, 395, function (iframe) {
            top.frames[iframe].AcceptClick()
        });
    }
    //编辑
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "DefectCatgId");
        if (IsChecked(KeyValue)) {
            var url = "/QualityModule/BBdbR_DefectCatgBase/Form?KeyValue=" + KeyValue;
            openDialog(url, "Form", "编辑缺陷类别表", 770, 395, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "DefectCatgId");
        if (IsDelData(KeyValue)) {
            var delPoatData = {
                KeyValue: KeyValue,
                DeleteMark: 1
            }
            delConfig('/QualityModule/BBdbR_DefectCatgBase/DeleteFAS', delPoatData, KeyValue.split(",").length);
        }
    }
    //Excel导入
    function btn_import() {
        var DefectCatgCd = GetJqGridRowValue("#gridTable", "DefectCatgCd");
        openDialog("/CommonModule/ExcelImport/ExcelImportDialog", "ExcelImportDialog", "缺陷类别信息导入", 750, 300, function (iframe) {
            top.frames[iframe].AcceptClick();
        });
    }
    //导出Excel
    function btn_export() {
        SetDeriveExcel("#gridTable", "缺陷类别");
        openDialog("/CommonModule/ExcelImport/DeriveDialog", "DeriveDialog", "缺陷类别信息导出", 600, 300, function (iframe) {
            top.frames[iframe].AcceptClick();
        });
    }
    //搜索
    function btn_Search() {
        var conditions = new Array();
        condition.ParamName = $("#Condition").val();
        if ($("#Condition").val() == "DefectCatgLevel") {
            condition.Operation = 'Equal';
            condition.ParamValue = $("#DefectCatgLevel").val();
        } else {
            condition.Operation = 'Like';
            condition.ParamValue = $("#Keywords").val();
        }
        conditions.push(condition);
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/QualityModule/BBdbR_DefectCatgBase/GridPageJsonFAS")?ParameterJson=" + JSON.stringify(conditions),
            datatype: 'json'
        }).trigger('reloadGrid');
    }

    //搜索栏
    function Show() {
        var Condition = $("#Condition").val();
        if (Condition == "DefectCatgLevel") {
            $("#DefectCatgLevel").show();
            $("#Keywords").hide();
        }
        else {
            $("#DefectCatgLevel").hide();
            $("#Keywords").show();
        }
    }
    //根据数据字典显示jqgrid表单内容
    function CellItem(Code, cellvalue) {
        var value = "";
        getAjax('/CommonModule/DataDictionary/BinDingItemsJson', { Code: Code }, function (data) {
            var itemjson = eval("(" + data + ")");
            $.each(itemjson, function (i) {
                if (itemjson[i].Code == cellvalue) {
                    value = itemjson[i].FullName;
                }
            });
        })
        return value;
    }
</script>
<!--工具栏-->
<div class="tools_bar leftline rightline" style="margin: 1px; margin-bottom: 0px;">
    <div class="PartialButton">
        @Html.Partial("_PartialButton")
    </div>
</div>
<div class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;">
    <table border="0" class="form-find" style="height: 45px;">
        <tr>
            <td>
                搜索条件：
            </td>
            <td>
                <select id="Condition" onchange="Show()" class="txt" style="height: 28px;width: 150px">
                    <option value="DefectCatgCd">缺陷类型编号</option>
                    <option value="DefectCatgNm">缺陷类型名称</option>
                    <option value="DefectCatgLevel">缺陷级别</option>
                </select>
            </td>
            <td>
                <select id="DefectCatgLevel" name="State" type="text" class="txt" style="height:auto"></select>
            </td>
            <td>
                <input id="Keywords" type="text" class="txt" style="width: 120px" />
            </td>
            <td>
                <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
            </td>
        </tr>
    </table>
</div>
<div class="topline rightline" style="margin: 1px; margin-top: -1px;">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
