@{
    ViewBag.Title = "检查模板基本信息表";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        GetGrid();
        GetTree();
        Show();
    })
    var area_key, area_name = "";//area_key,子节点
    var selectnodeishaschild = "";//选中树节点是否有子节点
    var parentId = "";//父节点编号
    //加载左边树
    function GetTree() {
        var itemtree = {
            onnodeclick: function (item) {
                selectnodeishaschild = item.hasChildren;
                area_key = item.id;            //ID
                area_name = item.text;         //名称
                parentId = item.parentnodes;   //父节点编号
                //2.点击树展示表格
                $("#gridTable").jqGrid('setGridParam', { url: "@Url.Content("~/BaseModule/BBdbR_QualityCheckModelBase/GridListJson")?areaId=" + area_key + "&parentId=" + parentId, datatype: 'json'}).trigger('reloadGrid');
    },
    url: "@Url.Content("~/BaseModule/BBdbR_QualityCheckModelBase/TreeJson")"    //1.获取树
    };
    $("#ItemsTree").treeview(itemtree);
    }
    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
        url: "@Url.Content("~/BaseModule/BBdbR_QualityCheckModelBase/GridPage")",
        datatype: "json",
        height: $(window).height() - 149,
        autowidth: true,
        colModel: [
                { label: '检查模板主键', name: 'QualityCheckModelId', index: 'QualityCheckModelId', width: 0, align: 'left',sortable: true ,hidden: true },
                { label: '质控点主键', name: 'QualityCheckPointId', index: 'QualityCheckPointId', width: 0, align: 'left',sortable: true ,hidden: true },
                { label: '检查模板编号', name: 'QualityCheckModelCd', index: 'QualityCheckModelCd', width: 0, align: 'left',sortable: true  },
                { label: '检查模板名称', name: 'QualityCheckModelNm', index: 'QualityCheckModelNm', width: 0, align: 'left',sortable: true  },
                { label: '版本号', name: 'VersionNumber', index: 'VersionNumber', width: 0, align: 'left',sortable: true  },
                { label: '有效性', name: 'Enabled', index: 'Enabled', width: 0, align: 'left',sortable: true ,hidden: true },
                { label: '检查模板描述', name: 'QualityCheckModelDsc', index: 'QualityCheckModelDsc', width: 0, align: 'left',sortable: true  },
                { label: '创建时间', name: 'CreTm', index: 'CreTm', width: 0, align: 'left',sortable: true  },
                { label: '创建人编号', name: 'CreCd', index: 'CreCd', width: 0, align: 'left',sortable: true  },
                { label: '创建人名称', name: 'CreNm', index: 'CreNm', width: 0, align: 'left',sortable: true },
                { label: '修改时间', name: 'MdfTm', index: 'MdfTm', width: 0, align: 'left',sortable: true },
                { label: '修改人编号', name: 'MdfCd', index: 'MdfCd', width: 0, align: 'left',sortable: true },
                { label: '修改人名称', name: 'MdfNm', index: 'MdfNm', width: 0, align: 'left',sortable: true },
                { label: '备注', name: 'Rem', index: 'Rem', width: 0, align: 'left',sortable: true  },
                { label: '预留字段1', name: 'RsvFld1', index: 'RsvFld1', width: 0, align: 'left',sortable: true ,hidden: true },
                { label: '预留字段2', name: 'RsvFld2', index: 'RsvFld2', width: 0, align: 'left',sortable: true ,hidden: true },
            ],
        viewrecords: true,//显示总的记录条数
        rowNum: 200,
        rowList: [200, 300, 500, 1000],
        pager: "#gridPager",
        sortname: 'QualityCheckModelCd',
        sortorder: 'asc',
        rownumbers: true,
        shrinkToFit: false,
        multiselect: true,
        multiboxonly: true,
        gridview: true,
        loadonce: true,
    });
    }
    //加载搜索框
    function Show() {
        var Condition = $("#Condition").val();
        if (Condition == "all") {
            $("#keywords").hide();
        }
        else {
            $("#keywords").show();
        }
    }
    //新增
    function btn_add() {
        if (parentId != "0" && parentId!="") {//选中的树节点不是根节点
            var url = "/BaseModule/BBdbR_QualityCheckModelBase/Form?areaId=" + area_key + "&ParentId=" + parentId
            openDialog(url, "Form", "新增检查模板基本信息表", 500, 300, function (iframe) {
                top.frames[iframe].AcceptClick()
            });
        }
        else {
            alertDialog("请选择左边质控点信息", 0);
        }
        
    }
    //编辑
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "QualityCheckModelId");
        if (IsChecked(KeyValue)) {
            var url = "/BaseModule/BBdbR_QualityCheckModelBase/Form?KeyValue=" + KeyValue + "&areaId=" + area_key;
            openDialog(url, "Form", "编辑检查模板基本信息表", 500, 300, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "QualityCheckModelId");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/BaseModule/BBdbR_QualityCheckModelBase/Delete', delparm, KeyValue.split(",").length);
        }
    }
    //刷新
    function windowload() {
        $("#gridTable").setGridParam({ datatype: 'json', page: 1 }).trigger("reloadGrid");
        
    }
    ////导入
    //function btn_import() {
    //    if (parentId != "0" && parentId != "") {//选中的树节点不是根节点
            
    //        openDialog("/BaseModule/QualityCheckModelBase/ExcelImportDialog?areaId=" + area_key, "ExcelImportDialog", "检查模板信息导入", 750, 300, function (iframe) {
    //            top.frames[iframe].AcceptClick();
    //        });
    //    }
    //    else {
    //        alertDialog("请选择左边质控点信息", 0);
    //    }
        
    //}
    ////导出Excel
    //function btn_derive() {
    //    SetDeriveExcel("#gridTable", "检查模板基本信息");
    //    openDialog("/CommonModule/ExcelImport/DeriveDialog", "DeriveDialog", "检查模板基本信息导出", 600, 300, function (iframe) {
    //        top.frames[iframe].AcceptClick();
    //    });
    //}
    //搜索
    function btn_Search() {
        var Condition = $("#Condition").val();
        var keywords = $("#keywords").val();;
        //if (Condition == "AviCatg") {
        //    keywords = $("#AviCatg").val();
        //}
        //else{
        //    keywords = $("#keywords").val();
        //}
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/BaseModule/BBdbR_QualityCheckModelBase/GridPageByCondition")?keywords=" + escape(keywords) + "&Condition=" + escape(Condition), page: 1, datatype: 'json'
    }).trigger('reloadGrid');
    }
    $(document).keypress(function (e) {
        // 回车键事件
        if (e.which == 13) {
            btn_Search();
        }
    });
    //配置产品和车身部位
    function btn_ConfigMat() {
        $(function () {
            var KeyValue = GetJqGridRowValue("#gridTable", "QualityCheckModelId");
            if (KeyValue != undefined && KeyValue != "" && KeyValue != 'null' || KeyValue != 'undefined') {
                var url = "/BaseModule/BBdbR_QualityCheckModelBase/MatConfigForm?KeyValue=" + KeyValue;
                openDialog(url, "MatConfigForm", "配置产品车身部位界面", 650, 660, function (iframe) {
                    top.frames[iframe].AcceptClick();

                });
            }
            else {
                alertDialog("请选择相应检查模板!", 0);
            }
        });

    }

    
</script>
<div id="layout" class="layout">
    <!--左边-->
    <div class="layoutPanel layout-west">
        <div class="btnbartitle">
            <div>
                质控点索引
            </div>
        </div>
        <div class="ScrollBar" id="ItemsTree"></div>
    </div>
    <!--中间-->
    <div class="layoutPanel layout-center">
        <!--工具栏-->
        <div class="tools_bar" style="border-top: none; margin-bottom: 0px;">
            <div class="PartialButton">
                @Html.Partial("_PartialButton")
            </div>
        </div>
        <!--列表-->
        <div id="grid_List">
            <div class="bottomline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;">
                <table border="0" class="form-find" style="height: 45px;">
                    <tr>
                        <th>
                            关键字：
                        </th>
                        <td>
                            <select id="Condition" style="width: 150px;height:25px" onclick="Show()">
                                <option value="all">==全部==</option>
                                <option value="QualityCheckModelCd">检查模板编号</option>
                                <option value="QualityCheckModelNm">检查模板名称</option>
                            </select>
                        </td>
                        <td>
                            <input id="keywords" type="text" class="txt" style="width: 200px" />
                        </td>
                        <td>
                            <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
                        </td>
                    </tr>
                </table>
            </div>
            <table id="gridTable"></table>
            <div id="gridPager"></div>
        </div>
    </div>
</div>
