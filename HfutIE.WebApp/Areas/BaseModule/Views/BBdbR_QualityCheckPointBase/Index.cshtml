@{
    ViewBag.Title = "质控点基本表";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        GetGrid();
        Show();
    })
    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
        url: "@Url.Content("~/BaseModule/BBdbR_QualityCheckPointBase/GridPage")",
        datatype: "json",
        height: $(window).height() - 149,
        autowidth: true,
        colModel: [
                { label: '质控点主键', name: 'QualityCheckPointId', index: 'QualityCheckPointId', width: 0, align: 'left',sortable: true ,hidden: true },
                { label: '质控点编号', name: 'QualityCheckPointCd', index: 'QualityCheckPointCd', width: 0, align: 'left',sortable: true  },
                { label: '质控点名称', name: 'QualityCheckPointNm', index: 'QualityCheckPointNm', width: 0, align: 'left',sortable: true  },
                { label: '顺序号', name: 'QueueNo', index: 'QueueNo', width: 0, align: 'left',sortable: true  },
                { label: '有效性', name: 'Enabled', index: 'Enabled', width: 0, align: 'left', sortable: true, hidden: true },
                { label: '版本号', name: 'VersionNumber', index: 'VersionNumber', width: 0, align: 'left',sortable: true  },
                { label: '质控点描述', name: 'QualityCheckPointDsc', index: 'QualityCheckPointDsc', width: 0, align: 'left',sortable: true  },
                { label: '创建时间', name: 'CreTm', index: 'CreTm', width: 0, align: 'left',sortable: true},
                { label: '创建人编号', name: 'CreCd', index: 'CreCd', width: 0, align: 'left',sortable: true},
                { label: '创建人名称', name: 'CreNm', index: 'CreNm', width: 0, align: 'left',sortable: true },
                { label: '修改时间', name: 'MdfTm', index: 'MdfTm', width: 0, align: 'left',sortable: true },
                { label: '修改人编号', name: 'MdfCd', index: 'MdfCd', width: 0, align: 'left',sortable: true },
                { label: '修改人名称', name: 'MdfNm', index: 'MdfNm', width: 0, align: 'left',sortable: true  },
                { label: '备注', name: 'Rem', index: 'Rem', width: 0, align: 'left',sortable: true  },
                { label: '预留字段1', name: 'RsvFld1', index: 'RsvFld1', width: 0, align: 'left',sortable: true ,hidden: true },
                { label: '预留字段2', name: 'RsvFld2', index: 'RsvFld2', width: 0, align: 'left',sortable: true ,hidden: true },
        ],
        viewrecords: true,//显示总的记录条数
        rowNum: 200,
        rowList: [200, 300, 500, 1000],
        pager: "#gridPager",
        sortname: 'QualityCheckPointCd',
        sortorder: 'asc',
        rownumbers: true,
        shrinkToFit: false,
        multiselect: true,
        multiboxonly: true,
        gridview: true,
        loadonce: true,
    });
    }

    //加载搜索框
    function Show() {
        var Condition = $("#Condition").val();
        if (Condition == "all") {
            $("#keywords").hide();
        }
        else {
            $("#keywords").show();
        }
    }
    //新增
    function btn_add() {
        var url = "/BaseModule/BBdbR_QualityCheckPointBase/Form"
        openDialog(url, "Form", "新增质控点基本表", 500, 300, function (iframe) {
            top.frames[iframe].AcceptClick()
        });
    }
    //编辑
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "QualityCheckPointId");
        if (IsChecked(KeyValue)) {
            var url = "/BaseModule/BBdbR_QualityCheckPointBase/Form?KeyValue=" + KeyValue;
            openDialog(url, "Form", "编辑质控点基本表", 500, 300, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "QualityCheckPointId");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/BaseModule/BBdbR_QualityCheckPointBase/Delete', delparm, KeyValue.split(",").length);
        }
    }
    //刷新
    function windowload() {
        $("#gridTable").setGridParam({ datatype: 'json', page: 1 }).trigger("reloadGrid");
        
    }
    //导入
    function btn_import() {
        var QualityCheckPointId = GetJqGridRowValue("#gridTable", "QualityCheckPointId");
        openDialog("/BaseModule/BBdbR_QualityCheckPointBase/ExcelImportDialog", "ExcelImportDialog", "质控点信息导入", 750, 300, function (iframe) {
            top.frames[iframe].AcceptClick();
        });
    }
    //导出Excel
    function btn_derive() {
        SetDeriveExcel("#gridTable", "质控点基本信息");
        openDialog("/CommonModule/ExcelImport/DeriveDialog", "DeriveDialog", "质控点基本信息导出", 600, 300, function (iframe) {
            top.frames[iframe].AcceptClick();
        });
    }

    //搜索
    function btn_Search() {
        var Condition = $("#Condition").val();
        var keywords = $("#keywords").val();
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/BaseModule/BBdbR_QualityCheckPointBase/GridPageByCondition")?keywords=" + escape(keywords) + "&Condition=" + escape(Condition), page: 1, datatype: 'json'
    }).trigger('reloadGrid');
    }
    $(document).keypress(function (e) {
        // 回车键事件
        if (e.which == 13) {
            btn_Search();
        }
    });
</script>
<!--工具栏-->
<div class="tools_bar leftline rightline" style="margin: 1px; margin-bottom: 0px;">
    <div class="PartialButton">
        @Html.Partial("_PartialButton")
    </div>
</div>
<div class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;">
    <table border="0" class="form-find" style="height: 45px;">
        <tr>
            <th>关键字：</th>
            <td>
                <select id="Condition" style="width: 150px;height:25px" onclick="Show()">
                    <option value="all">==全部==</option>
                    <option value="QualityCheckPointCd">质控点编号</option>
                    <option value="QualityCheckPointNm">质控点名称</option>
                </select>
            </td>
            <td>
                <input id="keywords" type="text" class="txt" style="width: 200px" />
            </td>
            <td>
                <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
            </td>
        </tr>
    </table>
</div>
<div class="topline rightline" style="margin: 1px; margin-top: -1px;">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
