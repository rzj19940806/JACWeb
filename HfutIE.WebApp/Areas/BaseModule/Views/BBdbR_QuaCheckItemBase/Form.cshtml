            <td class='formValue'>
                <input id="QuaCheckItemLowLimit" maxlength=18 type="text" class="txt"   />
            </td>
        </tr>
        <tr id="Value">
            <th class='formTitle'>检查项标准值：</th>
            <td class='formValue'>
                <input id="QuaCheckItemValue" maxlength=18 type="text" class="txt"   />
            </td>
        </tr>
