@{
    ViewBag.Title = "产线基础信息表》表单页面";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<script type="text/javascript">
    var KeyValue = GetQuery('KeyValue');//主键
    var WorkSectionId = GetQuery('area_key');//主键
    $(function () {
        BindDropItem("#PlineTyp", "PlineTyp", "==请选择==");
        StaffList();
        InitControl();
    })
    //加载人员列表
    function StaffList() {
        AjaxJson("/BaseModule/BBdbR_PlineBase/GetPlineNm", {}, function (data) {
            for (var i = 0; i < data.rows.length; i++) {
                $("#StfId").append("<option value='" + data.rows[i]["id"] + "'>" + data.rows[i]["stfnm"] + "</option>");
            }
        });
        RateGrade();
    }
    //加载人员信息
    function RateGrade() {
        let StfId = $("#StfId").val();
        AjaxJson("/BaseModule/BBdbR_PlineBase/GetPlineNm2?StfId=" + StfId, {}, function (data) {
            $("#Phn").val(data.rows[0]["phn"]);
            //$("#FacEmail").val(data.rows[0]["email"]);
        });
    }
    function OptionClick() {
        var obj = document.getElementById('StfId');
        var index = obj.selectedIndex;
        if (index != -1) {
            var PlineNm = obj.options[index].value;
            $('#StfId').val(PlineNm);
        }
    }
    //得到一个对象实体
    function InitControl() {
        $("#StfId").val(StfId);
        $("#WorkSectionId").val(WorkSectionId);
        if (!!GetQuery('KeyValue')) {
            AjaxJson("/BaseModule/BBdbR_PlineBase/SetForm", { KeyValue: KeyValue }, function (data) {
                SetWebControls(data);
                $("#DepartmentID").val(data.DepartmentID);
                $("#StfId").val(data.StfId);
                document.getElementById("PlineCd").readOnly = true;
            });
        }
    }
    //保存事件
    function AcceptClick() {
        if (!(checkHasOne(KeyValue))) {
            return false;
        }
        if (!CheckDataValid('#form1')) {
            return false;
        }
        var postData = GetWebControls("#form1");
        AjaxJson("/BaseModule/BBdbR_PlineBase/SubmitForm1?KeyValue=" + KeyValue + "&WorkSectionId=" + WorkSectionId , postData, function (data) {
            if (data.Message == "该编号已经存在！") {
                tipCss("PlineCd", data.Message);
                return;
            }
            tipDialog(data.Message, 3, data.Code);
            top.frames[tabiframeId()].windowload();
            closeDialog();
        });
    }
</script>
<form id="form1" style="margin: 1px">
    <div id="message" style="display: none"></div>
    <table class="form">
        <tr>
            <th class='formTitle' style="height:30px">产线编号：</th>
            <td class='formValue'>
                <input id="PlineCd" maxlength=50 type="text" class="txt required" datacol="yes" err="产线编号" checkexpession="NotNull" checkdata="hasOne" />
            </td>
            <th class='formTitle' style="height:30px">产线名称：</th>
            <td class='formValue'>
                <input id="PlineNm" maxlength=50 type="text" class="txt required" datacol="yes" err="产线名称" checkexpession="NotNull" checkdata="hasOne" />
            </td>
            
        </tr>      
        <tr>
            <th class='formTitle' style="height:30px">产线类型：</th>
            <td class='formValue'>
                <select id="PlineTyp" maxlength=100 type="text" class="txt"  datacol="yes" onclick="">
                    
                </select>
            </td>          
        </tr>    
        <tr>
            <th class='formTitle'>负责人员姓名：</th>
            <td class='formValue'>
                <select id="StfId" maxlength=50 type="text" class="txt" onchange="RateGrade()">
                    <option value="">--请选择产线负责人--</option>
                </select>
            </td>
            <th class='formTitle' style="height:30px">负责人手机号：</th>
            <td class='formValue'>
                <input id="Phn" maxlength=50 type="text" class="txt" readonly/>
            </td>
        </tr>
        <tr>
            <th class='formTitle'>工位数量：</th>
            <td class='formValue'>
                <input id="WcQuantity" maxlength=10 type="text" class="txt" />
            </td>
            <th class='formTitle'>工位默认长度：</th>
            <td class='formValue'>
                <input id="WcLength" maxlength=10 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>工位默认截距：</th>
            <td class='formValue'>
                <input id="WcIntercept" maxlength=10 type="text" class="txt" />
            </td>
            <th class='formTitle'>JPH：</th>
            <td class='formValue' >
                <input id="WspJPH" maxlength=10 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>缓存上限：</th>
            <td class='formValue'>
                <input id="CacheQantity" maxlength=10 type="text" class="txt" />
            </td>
            <th class='formTitle'>缓存下限：</th>
            <td class='formValue'>
                <input id="CacheLimit" maxlength=10 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>最高在制：</th>
            <td class='formValue'>
                <input id="HighestQantity" maxlength=10 type="text" class="txt" />
            </td>
            <th class='formTitle'>最低在制：</th>
            <td class='formValue'>
                <input id="LowestQantity" maxlength=10 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>前缓存上限：</th>
            <td class='formValue'>
                <input id="HighestFrontCache" maxlength=10 type="text" class="txt" />
            </td>
            <th class='formTitle'>前缓存下限：</th>
            <td class='formValue'>
                <input id="LowestFrontCache" maxlength=10 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>后缓存上限：</th>
            <td class='formValue'>
                <input id="HighestPostCache" maxlength=10 type="text" class="txt" />
            </td>
            <th class='formTitle'>后缓存下限：</th>
            <td class='formValue'>
                <input id="LowestPostCache" maxlength=10 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle' style="height:30px">产线描述：</th>
            <td class='formValue' colspan="3">
                <input id="Dsc" maxlength=500 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>备注：</th>
            <td class='formValue' colspan="3">
                <textarea id="Rem" maxlength="200" class="txtArea" rows="3"></textarea>
            </td>
        </tr>
    </table>
</form>
