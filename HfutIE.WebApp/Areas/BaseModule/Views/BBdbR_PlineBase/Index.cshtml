@{
    ViewBag.Title = "产线基础信息表";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        CellItem_AviCatg('PlineType');//需在GetGrid()之前进行初始化赋值
        GetGrid();
        GetTree();
        Show();
        BindDropItem("#PlineTyp", "PlineTyp", "==全部==");
    })
    var area_key, area_name = "";
    var selectnodeishaschild = "";//选中树节点是否有子节点
    var parentId = "";//父节点编号
    var itemsort = "";
    var PlineTypeCellItem = "";

    //加载左边树
    function GetTree() {
        var itemtree = {
            onnodeclick: function (item) {
                selectnodeishaschild = item.hasChildren;
                area_key = item.id;            //ID
                area_name = item.text;         //名称
                parentId = item.parentnodes;   //父节点编号
                itemsort = item.Type;
                //2.点击树展示表格
                $("#gridTable").jqGrid('setGridParam', { url: "@Url.Content("~/BaseModule/BBdbR_PlineBase/GridListJson")?area_key=" + area_key + "&parentId=" + parentId + "&sort=" + itemsort, datatype: 'json'}).trigger('reloadGrid');
    },
    url: "@Url.Content("~/BaseModule/BBdbR_PlineBase/TreeJson")"    //1.获取树
    };
    $("#ItemsTree").treeview(itemtree);
    }

    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
        url: "@Url.Content("~/BaseModule/BBdbR_PlineBase/GridListJson?area_key=''&parentId=''&sort=''")",
        datatype: "json",
        height: $(window).height() - 149,
        autowidth: true,
        colModel: [    
            { label: '产线主键', name: 'PlineId', index: 'PlineId', width: 0, align: 'center', sortable: true, hidden: true },
            { label: '工段主键', name: 'WorkSectionId', index: 'WorkSectionId', width: 0, align: 'left', sortable: true, hidden: true  },
            { label: '产线编号', name: 'PlineCd', index: 'PlineCd', width: 0, align: 'center', sortable: true },
            { label: '产线名称', name: 'PlineNm', index: 'PlineNm', width: 0, align: 'center', sortable: true },
            { label: '工段编号', name: 'WorkSectionCd', index: 'WorkSectionCd', width: 0, align: 'center', sortable: true },
            { label: '工段名称', name: 'WorkSectionNm', index: 'WorkSectionNm', width: 0, align: 'center', sortable: true },
            {
                label: '产线类型', name: 'PlineTyp', index: 'PlineTyp', width: 0, align: 'center', sortable: true,
                formatter: function (cellvalue, options, rowObject) {
                    return CellItem('PlineTyp', cellvalue);
                }
            },
            { label: '工位数量', name: 'WcQuantity', index: 'WcQuantity', width: 0, align: 'center', sortable: true },
            { label: '工位默认长度', name: 'WcLength', index: 'WcLength', width: 0, align: 'left', sortable: true },
            { label: '工位默认截距', name: 'WcIntercept', index: 'WcIntercept', width: 0, align: 'left', sortable: true },
            { label: 'JPH', name: 'WspJPH', index: 'WspJPH', width: 0, align: 'left', sortable: true },
            { label: '缓存上限', name: 'CacheQantity', index: 'CacheQantity', width: 0, align: 'left', sortable: true },
            { label: '缓存下限', name: 'CacheLimit', index: 'CacheLimit', width: 0, align: 'left', sortable: true },
            { label: '最高在制', name: 'HighestQantity', index: 'HighestQantity', width: 0, align: 'left', sortable: true },
            { label: '最低在制', name: 'LowestQantity', index: 'LowestQantity', width: 0, align: 'left', sortable: true },
            { label: '预警位', name: 'PreAlarmPoint', index: 'PreAlarmPoint', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '停止位', name: 'EndPoint', index: 'EndPoint', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '运行模式', name: 'RunningMode', index: 'RunningMode', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '开始', name: 'StationBegion', index: 'StationBegion', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '结束', name: 'StationEnd', index: 'StationEnd', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '前缓存上限', name: 'HighestFrontCache', index: 'HighestFrontCache', width: 0, align: 'left', sortable: true },
            { label: '前缓存下限', name: 'LowestFrontCache', index: 'LowestFrontCache', width: 0, align: 'left', sortable: true },
            { label: '后缓存上限', name: 'HighestPostCache', index: 'HighestPostCache', width: 0, align: 'left', sortable: true },
            { label: '后缓存下限', name: 'LowestPostCache', index: 'LowestPostCache', width: 0, align: 'left', sortable: true },
            { label: '负责人员主键', name: 'StfId', index: 'StfId', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '负责人员编号', name: 'StfCd', index: 'StfCd', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '负责人员姓名', name: 'StfNm', index: 'StfNm', width: 0, align: 'left', sortable: true },
            { label: '负责人手机号', name: 'Phn', index: 'Phn', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '产线描述', name: 'Dsc', index: 'Dsc', width: 0, align: 'left', sortable: true },
            { label: '版本号', name: 'VersionNumber', index: 'VersionNumber', width: 0, align: 'left', sortable: true },
            {
                label: '有效性', name: 'Enabled', index: 'Enabled', width: 60, align: 'center', hidden: true,
                formatter: function (cellvalue, options, rowObject) {
                    if (cellvalue == '1') return "<img src='../../Content/Images/checkokmark.gif'/>";
                    if (cellvalue == '0') return "<img src='../../Content/Images/checknomark.gif'/>";
                }
            },  
            { label: '创建时间', name: 'CreTm', index: 'CreTm', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '创建人编号', name: 'CreCd', index: 'CreCd', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '创建人名称', name: 'CreNm', index: 'CreNm', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '修改时间', name: 'MdfTm', index: 'MdfTm', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '修改人编号', name: 'MdfCd', index: 'MdfCd', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '修改人名称', name: 'MdfNm', index: 'MdfNm', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '备注', name: 'Rem', index: 'Rem', width: 0, align: 'left', sortable: true },
            { label: '预留字段1', name: 'RsvFld1', index: 'RsvFld1', width: 0, align: 'left', sortable: true, hidden: true },
            { label: '预留字段2', name: 'RsvFld2', index: 'RsvFld2', width: 0, align: 'left', sortable: true, hidden: true },
        ],
        viewrecords: true,//显示总的记录条数
        rowNum: 50,
        rowList: [50, 100, 500, 1000],
        pager: "#gridPager",
        sortname: '',
        sortorder: 'desc',
        rownumbers: true,
        multiselect: true,
        multiboxonly: true,
        shrinkToFit: true,
        gridview: true,
        loadonce: true,
    });
    }

    //加载搜索框
    function Show() {
        var Condition = $("#Condition").val();
        if (Condition == "all") {
            $("#PlineTyp").hide();
            $("#keywords").hide();
        }
        else if (Condition == "PlineTyp") {
            $("#PlineTyp").show();
            $("#keywords").hide();
        }
        else {
            $("#PlineTyp").hide();
            $("#keywords").show();
        }
    }

    //刷新
    function windowload() {
        $("#gridTable").setGridParam({ datatype: 'json', page: 1 }).trigger("reloadGrid");
    }

    //新增按钮
    function btn_add() {
        if (!!area_key) {
            if (itemsort == "2") {
                var url = "/BaseModule/BBdbR_PlineBase/Form?area_key=" + area_key
                openDialog(url, "Form", "新增产线信息", 600, 360, function (iframe) {
                    top.frames[iframe].AcceptClick()
                });
            }
            else {
                alertDialog("请选择工艺段节点！", 0);
            }
        }
        else {
            alertDialog("请选择左边工艺段信息", 0);
        }
    }

    //编辑按钮
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "PlineId");
        if (KeyValue == undefined || KeyValue == "" || KeyValue == 'null' || KeyValue == 'undefined') {
            tipDialog('您没有选中任何项,请您选中后再操作。', 4, 'warning');
        }
        else {
            var count = KeyValue.split(",").length;
            if (count >= 2) {
                tipDialog('很抱歉，一次只能选择一个进行操作。', 4, 'warning');
            }
            else {
                var url = "/BaseModule/BBdbR_PlineBase/Form?KeyValue=" + KeyValue + "&area_key=" + area_key;
                openDialog(url, "Form", "编辑产线信息", 600, 360, function (iframe) {
                    top.frames[iframe].AcceptClick()
                });
            }
        }       
    }

    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "PlineId");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/BaseModule/BBdbR_PlineBase/DeletePline', delparm, KeyValue.split(",").length);
        }
    }

    //导入
    function btn_import() {
        if (parentId != "0" && parentId != "") {//选中的树节点不是根节点

            openDialog("/BaseModule/BBdbR_PlineBase/ExcelImportDialog?areaId=" + area_key, "ExcelImportDialog", "产线信息导入", 750, 300, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
        else {
            alertDialog("请选择左边工艺段信息", 0);
        }
    }
    //导出Excel
    function btn_derive() {
        SetDeriveExcel("#gridTable", "产线基本信息");
        openDialog("/CommonModule/ExcelImport/DeriveDialog", "DeriveDialog", "产线基本信息导出", 600, 300, function (iframe) {
            top.frames[iframe].AcceptClick();
        });
    }

    //搜索
    function btn_Search() {
        var Condition = $("#Condition").val();
        var keywords;
        if (Condition != "PlineTyp") {
             keywords = $("#keywords").val();
        }
        else {
            keywords = $("#PlineTyp").val();
        }
      
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/BaseModule/BBdbR_PlineBase/GridPageByCondition")?keywords=" + escape(keywords) + "&Condition=" + escape(Condition), page: 1, datatype: 'json'
    }).trigger('reloadGrid');
    }
    $(document).keypress(function (e) {
        // 回车键事件
        if (e.which == 13) {
            btn_Search();
        }
    });
    //根据数据字典显示内容
    function CellItem(Code, cellvalue) {
        var value = "";
        getAjax('/CommonModule/DataDictionary/BinDingItemsJson', { Code: Code }, function (data) {
            var itemjson = eval("(" + data + ")");
            $.each(itemjson, function (i) {
                if (itemjson[i].Code == cellvalue) {
                    value = itemjson[i].FullName;
                }
            });
        })
        return value;
    }

    //根据数据字典显示内容
    function CellItem_AviCatg(Code) {
        var value = "";
        getAjax('/CommonModule/DataDictionary/BinDingItemsJson', { Code: Code }, function (data) {
            var itemjson = eval("(" + data + ")");
            var length = itemjson.length;
            if (length == 1) {
                PlineTypeCellItem = itemjson[0].Code + ":" + itemjson[0].FullName;
            }
            else if (length > 1) {
                for (var a = 0; a < length - 1; a++) {
                    value += itemjson[a].Code + ":" + itemjson[a].FullName + ";";
                }
                PlineTypeCellItem = value + itemjson[length - 1].Code + ":" + itemjson[length - 1].FullName;
            }
        })
    }

</script>
<div id="layout" class="layout">
    @*树区域*@
    <div class="layoutPanel layout-west">
        <div class="btnbartitle">
            <div>
                工艺段索引
            </div>
        </div>
        <div class="ScrollBar" id="ItemsTree"></div>
    </div>
    <div class="layoutPanel layout-center">
        @*按钮区域*@
        <div class="tools_bar" style="margin-top: 1px; margin-bottom: 0px;">
            <div class="PartialButton">
                @Html.Partial("_PartialButton")
            </div>
        </div>
        @*搜索框区域*@
        <table border="0" class="form-find" style="height: 45px;">
            <tr>
                <th>关键字：</th>
                <td>
                    <select id="Condition" style="width: 150px;height:25px"  onclick="Show()">
                        <option value="all">==全部==</option>
                        <option value="PlineCd">产线编号</option>
                        <option value="PlineNm">产线名称</option>
                        <option value="PlineTyp">产线类型</option>
                    </select>
                </td>
                <td>
                    <input id="keywords" type="text" class="txt" style="width: 200px" />
                </td>
                <td>
                    <select id="PlineTyp" style="width: 150px;height:25px">
                    </select>
                </td>
                <td>
                    <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
                </td>
            </tr>
        </table>
        @*</div>*@
        @*表格区域*@
        <div class="topline rightline" style="margin: 1px; margin-top: -1px;">
            <table id="gridTable"></table>
            <div id="gridPager"></div>
        </div>
    </div>
</div>

