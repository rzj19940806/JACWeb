            var rowData = $('#gridTable').jqGrid('getRowData', row);
            var KeyValue = rowData.MatId;
            var image1, filename1;
            AjaxJson("/BaseModule/BBdbR_MatBase/SetMatForm", { KeyValue: KeyValue }, function (data) {
