@{
    ViewBag.Title = "物料基础信息表";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        CellItem_MatType('MatType');//需在GetGrid()之前进行初始化赋值
        CellItem_MatCatg('MatCatg');
        CellItem_MatSpec('MatSpec');
        CellItem_FileTy('FileTy');
        GetGrid();//加载物料基础信息
        GetGrid2();//加载物料文档配置信息
        Tabchange('check1');
        Show();
        BindDropItem("#MatTyp", "MatType", "==全部==");
        BindDropItem("#MatCatg", "MatCatg", "==全部==");
        BindDropItem("#MatSpec", "MatSpec", "==全部==");
    })
    var MatTypeCellItem = "";
    var MatSpecCellItem = "";
    var MatCatgCellItem = "";
    var FileTyCellItem = "";

    //加载班组表格
    function GetGrid() {
        $("#gridTable").jqGrid({
        url: "@Url.Content("~/BaseModule/BBdbR_MatBase/GridPageJson1")",
        datatype: "json",
        height:288,
        autowidth: true,
        colModel: [
                    { label: '物料ID', name: 'MatId', index: 'MatId', width: 0, align: 'center', sortable: true, hidden: true },
                    { label: '物料编号', name: 'MatCd', index: 'MatCd', width: 200, align: 'center', sortable: true },
                    { label: '物料名称', name: 'MatNm', index: 'MatNm', width: 300, align: 'center', sortable: true },
                    {
