                filename1 = data.rows[0].MatNm;
            });
            var test = document.getElementById('picture');
            test.src = 'data:image/' + filename1 + ';base64,' + image1;
            test.style.width = "300px";
            test.style.height = "300px";
            repeat();
            }

       });
    }

