@{
    ViewBag.Title = "AVI站点组基础信息表";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        Show()
        GetGrid();
        GetGrid1();
    })
    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
        url: "@Url.Content("~/BaseModule/BBdbR_AVIGroupConfig/GridPageJson")",
        datatype: "json",
        height: $(window).height() * 0.35,
        autowidth: true,
        colModel: [
            { label: 'AVI站点组主键', name: 'AVIGroupId', index: 'AVIGroupId', width: 0, align: 'center', sortable: true, hidden: true  },
            { label: 'AVI站点组编号', name: 'AVIGroupCd', index: 'AVIGroupCd', width: 0, align: 'center',sortable: true  },
            { label: 'AVI站点组名称', name: 'AVIGroupNm', index: 'AVIGroupNm', width: 0, align: 'center',sortable: true  },
            { label: 'AVI站点数量', name: 'AVIGroupCount', index: 'AVIGroupCount', width: 0, align: 'center', sortable: true },
            { label: '版本号', name: 'VersionNumber', index: 'VersionNumber', width: 0, align: 'center',sortable: true ,hidden: true },
            {
                label: '有效性', name: 'Enabled', index: 'Enabled', width: 0, align: 'center', sortable: true,
                formatter: function (cellvalue, options, rowObject) {
                    if (cellvalue == '1') return "<img src='../../Content/Images/checkokmark.gif'/>";
                    if (cellvalue == '0') return "<img src='../../Content/Images/checknomark.gif'/>";
                }
            },
            { label: '创建时间', name: 'CreTm', index: 'CreTm', width: 0, align: 'center', sortable: true  },
            { label: '创建人编号', name: 'CreCd', index: 'CreCd', width: 0, align: 'center', sortable: true },
            { label: '创建人名称', name: 'CreNm', index: 'CreNm', width: 0, align: 'center', sortable: true  },
            { label: '修改时间', name: 'MdfTm', index: 'MdfTm', width: 0, align: 'center', sortable: true  },
            { label: '修改人编号', name: 'MdfCd', index: 'MdfCd', width: 0, align: 'center', sortable: true  },
            { label: '修改人名称', name: 'MdfNm', index: 'MdfNm', width: 0, align: 'center', sortable: true  },
            { label: '备注', name: 'Rem', index: 'Rem', width: 0, align: 'center',sortable: true  },
            { label: '预留字段1', name: 'RsvFld1', index: 'RsvFld1', width: 0, align: 'center',sortable: true ,hidden: true },
            { label: '预留字段2', name: 'RsvFld2', index: 'RsvFld2', width: 0, align: 'center',sortable: true ,hidden: true },
        ],
        pager: "#gridPager",
        sortname: '',
        sortorder: 'desc',
        rownumbers: true,
        shrinkToFit: false,
        gridview: true,
        multiselect: true,
            //表格行单击事件onClickRow
            onSelectRow: function (RowId) {
                var KeyValue = GetJqGridRowValue("#gridTable", "AVIGroupId");
                $("#gridTable_Bottom").jqGrid('setGridParam', { url: "@Url.Content("~/BaseModule/BBdbR_AVIGroupConfig/AVIGroupConfig_Down")?KeyValue=" + KeyValue, page: 1, datatype: 'json' }).trigger('reloadGrid');
        },
    });
    }
    //加载下表格
   function GetGrid1() {
       $("#gridTable_Bottom").jqGrid({
        datatype: "json",
           height: 280,
        autowidth: true,
        colModel: [
                { label: 'AVI站点组主键', name: 'AVIGroupId', index: 'AVIGroupId', width: 0, align: 'center', sortable: true, hidden: true },
                { label: 'AVI站点组编号', name: 'AVIGroupCd', index: 'AVIGroupCd', width: 0, align: 'center', sortable: true },
                { label: 'AVI站点组名称', name: 'AVIGroupNm', index: 'AVIGroupNm', width: 0, align: 'center', sortable: true },
                { label: 'AVI站点数量', name: 'AVIGroupNm', index: 'AVIGroupNm', width: 0, align: 'center', sortable: true },
                { label: 'AVI主键', name: 'AVIId', index: 'AVIId', width: 0, align: 'center', sortable: true, hidden: true },
                { label: 'AVI编号', name: 'AVICd', index: 'AVICd', width: 0, align: 'center', sortable: true },
                { label: 'AVI名称', name: 'AVINm', index: 'AVINm', width: 0, align: 'center', sortable: true },
                { label: '版本号', name: 'VersionNumber', index: 'VersionNumber', width: 0, align: 'center', sortable: true, hidden: true },
                {
                      label: '有效性', name: 'Enabled', index: 'Enabled', width: 0, align: 'center', sortable: true,
                      formatter: function (cellvalue, options, rowObject) {
                          if (cellvalue == '1') return "<img src='../../Content/Images/checkokmark.gif'/>";
                          if (cellvalue == '0') return "<img src='../../Content/Images/checknomark.gif'/>";
                       }
                },
                { label: '创建时间', name: 'CreTm', index: 'CreTm', width: 0, align: 'center', sortable: true },
                { label: '创建人编号', name: 'CreCd', index: 'CreCd', width: 0, align: 'center', sortable: true },
                { label: '创建人名称', name: 'CreNm', index: 'CreNm', width: 0, align: 'center', sortable: true },
                { label: '修改时间', name: 'MdfTm', index: 'MdfTm', width: 0, align: 'center', sortable: true },
                { label: '修改人编号', name: 'MdfCd', index: 'MdfCd', width: 0, align: 'center', sortable: true },
                { label: '修改人名称', name: 'MdfNm', index: 'MdfNm', width: 0, align: 'center', sortable: true },
                { label: '备注', name: 'Rem', index: 'Rem', width: 0, align: 'center', sortable: true },
                { label: '预留字段1', name: 'RsvFld1', index: 'RsvFld1', width: 0, align: 'center', sortable: true, hidden: true },
                { label: '预留字段2', name: 'RsvFld2', index: 'RsvFld2', width: 0, align: 'center', sortable: true, hidden: true },
            ],
           pager: "#gridPager_Bottom",
           sortname: '',
           sortorder: 'desc',
           rownumbers: true,
           shrinkToFit: false,
           gridview: true,
    });
    }

    //新增
    function btn_add() {
        var url = "/BaseModule/BBdbR_AVIGroupConfig/Form"
        openDialog(url, "Form", "新增AVI站点组", 500, 300, function (iframe) {
            top.frames[iframe].AcceptClick()
        });
    }
    //编辑
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "AVIGroupId");
        if (KeyValue == undefined || KeyValue == "" || KeyValue == 'null' || KeyValue == 'undefined') {
            tipDialog('您没有选中任何项,请您选中后再操作。', 4, 'warning');
        }
        else {
            var count = KeyValue.split(",").length;
            if (count >= 2) {
                tipDialog('很抱歉，一次只能选择一个进行操作。', 4, 'warning');
            }
            else {
                var url = "/BaseModule/BBdbR_AVIGroupConfig/Form?KeyValue=" + KeyValue ;
                openDialog(url, "Form", "编辑AVI站点组信息", 500, 300, function (iframe) {
                    top.frames[iframe].AcceptClick()
                });
            }
        }
    }
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "AVIGroupId");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/BaseModule/BBdbR_AVIGroupConfig/Delete', delparm, KeyValue.split(",").length);
        }
    }
    //明细
    function btn_detail() {
        var KeyValue = GetJqGridRowValue("#gridTable", "AVIId");
        if (IsChecked(KeyValue)) {
            var url = "/BaseModule/BBdbR_AVIGroupConfig/Detail?KeyValue=" + KeyValue;
            Dialog(url, "Detail", "AVI站点基础信息表明细", 820, 500, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }

    //站点分组配置
    function btn_Config() {
        var AVIGroupId = GetJqGridRowValue("#gridTable", "AVIGroupId");
        if (IsChecked(AVIGroupId)) {
            var url = "/BaseModule/BBdbR_AVIGroupConfig/AVIGroupConfigForm?AVIGroupId=" + AVIGroupId;
            openDialog(url, "AVIGroupConfigForm", "配置该AVI分组", 650, 660, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }

    //加载搜索框
    function Show() {
        var Condition = $("#Condition").val();
        if (Condition == "all") {           
            $("#keywords").hide();
        }       
        else {
           
            $("#keywords").show();
        }
    }
    //搜索
    function btn_Search() {
        var Condition = $("#Condition").val();
        var keywords = $("#keywords").val();
      
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/BaseModule/BBdbR_AVIGroupConfig/GridPageByCondition")?keywords=" + escape(keywords) + "&Condition=" + escape(Condition), page: 1, datatype: 'json'
    }).trigger('reloadGrid');
    }
    $(document).keypress(function (e) {
        // 回车键事件
        if (e.which == 13) {
            btn_Search();
        }
    });
    //刷新
    function windowload() {
        $("#gridTable").setGridParam({ datatype: 'json', page: 1 }).trigger("reloadGrid");
        $("#gridTable_Bottom").setGridParam({ datatype: 'json', page: 1 }).trigger("reloadGrid");
    }

    //根据数据字典显示内容
    function CellItem(Code, cellvalue) {
        var value = "";
        getAjax('/CommonModule/DataDictionary/BinDingItemsJson', { Code: Code }, function (data) {
            var itemjson = eval("(" + data + ")");
            $.each(itemjson, function (i) {
                if (itemjson[i].Code == cellvalue) {
                    value = itemjson[i].FullName;
                }
            });
        })
        return value;
    }
</script>

<div class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;">
    @*按钮区域*@
    <div class="tools_bar" style="margin-top: 1px; margin-bottom: 0px;">
        <div class="PartialButton">
            @Html.Partial("_PartialButton")
        </div>
    </div>
    @*搜索框区域*@
    <table border="0" class="form-find" style="height: 40px;">
        <tr>
            <th>关键字：</th>
            <td>
                <select id="Condition" style="width: 150px;height:25px" onclick="Show()">
                    <option value="all">==全部==</option>
                    <option value="AVIGroupCd">AVI站点组编号</option>
                    <option value="AVIGroupNm">AVI站点名称</option>
                </select>
            </td>
            <td>
                <input id="keywords" type="text" class="txt" style="width: 150px" />
            </td>
            <td>
                <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
            </td>
        </tr>
    </table>
    @*表格区域*@
    <div id="TopPanel" class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;width:100%;float:left;height:100%">
        <div class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;height:100%">
            <div class="btnbartitle">
                <div style="float: left;margin-left:22px">
                    AVI站点组信息 <span class="ModuleName"></span>
                </div>
            </div>
            <div style="height: 49% ;width:auto; ">
                <div class="topline rightline" style="margin: 1px; margin-top: -1px;">
                    <table id="gridTable"></table>
                    <div id="gridPager"></div>
                </div>
            </div>
        </div>
    </div>
    <div id="BottomPanel" class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;width:100%;float:left;height:45%">
        <div class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;height:100%">
            <div class="bd" style="border-bottom: none; margin: 1px;">
                <div class="tipstitle_title settingtable bold bd todayInfoPanelTab rightPanelTitle_normal">
                    <div class="tab_list_top" style="position: absolute">
                        <div id="Tabcheck1" class="tab_list bd actived" onclick="Tabchange('check1')"> AVI站点组配置信息 </div>
                    </div>
                </div>
            </div>
            <div class="ScrollBar" style="margin: 1px; overflow: hidden;">
                <!--配置班组信息-->
                <div id="check1" class="tabPanel">
                    <table id="gridTable_Bottom" class="ui-jqgrid tr.jqgrow td"></table>
                    <div id="gridPager_Bottom"></div>
                </div>
            </div>
        </div>
    </div>
</div>

